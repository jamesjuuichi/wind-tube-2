pagePadding = 20px
buttonMargin = 11px

body
  margin 0
  background #202020
  display flex
  justify-content center
  align-items center
  width 100vw
  height 100vh
#permit
  position absolute
  right pagePadding
  top pagePadding
#current-note
  position absolute
  left pagePadding
  bottom pagePadding
  color rgba(255, 0, 255, 0.5)
  font-family sans-serif
#button-group
  position absolute
  top pagePadding
  left pagePadding
  > .control-button
    margin-right buttonMargin
    &:last-child
      margin-right 0
.control-button
  background transparent
  border none
  position relative
  overflow hidden
  border-radius 1px
  z-index 0
  color #e0e0e0
  height 1.5rem
  padding 0 0.75rem
  &:before
    z-index -2
    position absolute
    left -100%
    width 200%
    top 0
    bottom 0
    content ''
    background-color #e0e0e0
  &:after
    position absolute
    content ''
    z-index -1
    background #202020
    left 2px
    right 2px
    top 2px
    bottom 2px
  &.disabled
    pointer-events none
    color #808080
    &:before
      background-color #808080
  &.active:before
    background-image linear-gradient(90deg, #808080, #e0e0e0, #808080, #e0e0e0, #808080)
    animation animus 3s infinite linear
.fade-away
  animation anima 0.5s forwards
@keyframes animus
  0%
    left -100%
  100%
    left 0
@keyframes anima
  0%
    opacity 1
    display inline-block
  99%
    opacity 0
    display inline-block
  100%
    opacity 0
    display none
#canvas
  position absolute
  top 0
  left 0
  width 100%
  height 100%